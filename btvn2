 let arr = [4,2,5,6,2,7]
function soDuCua2(arr){
  const arr2 = [];
    for(let i= 0 ; i<=arr.length ; i++){
        const soDu = arr[i] %2 ;
        arr2.push(soDu);
    }
       return arr2;
};
const arr1 = soDuCua2(arr);
console.log(arr1);
